<% if (message.length > 0) { %>
  <div class="alert alert-danger"><%= message %></div>
<% } %>

<section id="welcome">
	<div class="container">
		<div>
			<h1>Work Better, Not Harder</h1>
			<p>Share how you work to help others better understand what can make them more productive. </p>
		</div>
	</div>
</section>

<section id="top-users" class="container">
	<h2>Top Workspaces!</h2>
	<% users.forEach(function(user) { %>
	<div class="row">
		<div class="col-sm-12">
			<h2><%= user.username %></h2>
		</div>
		<div class="col-sm-3 profile-image">
			<img src="/images/something.png" alt="Profile Picture">
		</div>
		<div class="col-sm-6">
			<h3><%= user.jobTitle %></h3>
			<p><%= user.blurb %> </p>
			<a href="/users/<%= user.username %>">Read Workspace </a>
		</div>
	</div>
	<% }); %>
</section>



